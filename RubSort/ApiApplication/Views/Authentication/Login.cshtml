@model LoginViewModel

<h2>Вход на сайт</h2>

<form asp-action="Login" asp-controller="Authentication" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="All"></div>
    <div>
        <div>
            <label asp-for="Email">Введите Email</label><br/>
            <input type="text" asp-for="Email"/>
        </div>
        <div>
            <label asp-for="Password">Введите пароль</label><br/>
            <input asp-for="Password"/>
        </div>

        <div>
            <button type="submit">Войти</button>
            <a asp-action="Register" asp-controller="Authentication">
                <button type="button">Регистрация</button>
            </a>
            <a asp-action="ResetPassword" asp-controller="Authentication">
                <button type="button">Забыли пароль?</button>
            </a>
        </div>
    </div>
</form>